{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "out",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "@code-insights/*": ["components/CodeInsights/*"],
      "@components": ["components"],
      "@data": ["data"],
      "@hooks": ["hooks"],
      "@interfaces/*": ["interfaces/*"],
      "@lib": ["lib"],
      "@styles/*": ["styles/*"],
      "@util": ["util"]
    }
  },
  "include": ["next-env.d.ts", "additional.d.ts", "src/**/*", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
