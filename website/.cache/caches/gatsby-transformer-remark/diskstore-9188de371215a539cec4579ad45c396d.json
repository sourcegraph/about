":"paragraph","children":[{"type":"text","value":"Bulk actions allow users to automate taking an action on many changesets at a time. In this release, we are introducing a first bulk action: ","position":{"start":{"line":18,"column":1,"offset":1147},"end":{"line":18,"column":142,"offset":1288},"indent":[]}},{"type":"strong","children":[{"type":"text","value":"comments","position":{"start":{"line":18,"column":144,"offset":1290},"end":{"line":18,"column":152,"offset":1298},"indent":[]}}],"position":{"start":{"line":18,"column":142,"offset":1288},"end":{"line":18,"column":154,"offset":1300},"indent":[]}},{"type":"text","value":". Common use cases include:","position":{"start":{"line":18,"column":154,"offset":1300},"end":{"line":18,"column":181,"offset":1327},"indent":[]}}],"position":{"start":{"line":18,"column":1,"offset":1147},"end":{"line":18,"column":181,"offset":1327},"indent":[]}},{"type":"list","ordered":false,"start":null,"spread":false,"children":[{"type":"listItem","spread":false,"checked":null,"children":[{"type":"paragraph","children":[{"type":"text","value":"nudge repository owners to merge starving changesets “This batch change is now 54% merged, consider merging yours!”","position":{"start":{"line":20,"column":3,"offset":1331},"end":{"line":20,"column":118,"offset":1446},"indent":[]}}],"position":{"start":{"line":20,"column":3,"offset":1331},"end":{"line":20,"column":118,"offset":1446},"indent":[]}}],"position":{"start":{"line":20,"column":1,"offset":1329},"end":{"line":20,"column":118,"offset":1446},"indent":[]}},{"type":"listItem","spread":false,"checked":null,"children":[{"type":"paragraph","children":[{"type":"text","value":"add links to docs, or add instructions to all the changesets in a batch change","position":{"start":{"line":21,"column":3,"offset":1449},"end":{"line":21,"column":81,"offset":1527},"indent":[]}}],"position":{"start":{"line":21,"column":3,"offset":1449},"end":{"line":21,"column":81,"offset":1527},"indent":[]}}],"position":{"start"