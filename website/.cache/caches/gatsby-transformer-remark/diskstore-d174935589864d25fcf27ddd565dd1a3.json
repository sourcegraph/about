tion":{"start":{"line":49,"column":3,"offset":5682},"end":{"line":49,"column":128,"offset":5807}}}],"position":{"start":{"line":49,"column":1,"offset":5680},"end":{"line":49,"column":128,"offset":5807}}},{"type":"text","value":"\n"},{"type":"element","tagName":"li","properties":{},"children":[{"type":"element","tagName":"a","properties":{"href":"https://about.sourcegraph.com/blog/remote-work-calendar/"},"children":[{"type":"text","value":"Async, remote, and flexible: How 7 engineers rethought their work calendars","position":{"start":{"line":50,"column":4,"offset":5811},"end":{"line":50,"column":79,"offset":5886}}}],"position":{"start":{"line":50,"column":3,"offset":5810},"end":{"line":50,"column":138,"offset":5945}}}],"position":{"start":{"line":50,"column":1,"offset":5808},"end":{"line":50,"column":138,"offset":5945}}},{"type":"text","value":"\n"}],"position":{"start":{"line":48,"column":1,"offset":5590},"end":{"line":50,"column":138,"offset":5945}}}],"position":{"start":{"line":1,"column":1,"offset":0},"end":{"line":51,"column":1,"offset":5946}}}}