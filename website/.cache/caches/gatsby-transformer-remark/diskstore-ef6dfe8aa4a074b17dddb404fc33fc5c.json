n":85,"offset":3282},"indent":[]}}],"position":{"start":{"line":32,"column":1,"offset":3198},"end":{"line":32,"column":85,"offset":3282},"indent":[]}},{"type":"listItem","spread":false,"checked":null,"children":[{"type":"paragraph","children":[{"type":"text","value":"“I use CODEOWNERS to get notified of PRs”","position":{"start":{"line":33,"column":3,"offset":3285},"end":{"line":33,"column":44,"offset":3326},"indent":[]}}],"position":{"start":{"line":33,"column":3,"offset":3285},"end":{"line":33,"column":44,"offset":3326},"indent":[]}}],"position":{"start":{"line":33,"column":1,"offset":3283},"end":{"line":33,"column":44,"offset":3326},"indent":[]}},{"type":"listItem","spread":false,"checked":null,"children":[{"type":"paragraph","children":[{"type":"text","value":"“Replace with ","position":{"start":{"line":34,"column":3,"offset":3329},"end":{"line":34,"column":17,"offset":3343},"indent":[]}},{"type":"link","title":null,"url":"https://chromium.googlesource.com/chromium/src/+/master/docs/code_reviews.md","children":[{"type":"text","value":"OWNERS","position":{"start":{"line":34,"column":18,"offset":3344},"end":{"line":34,"column":24,"offset":3350},"indent":[]}}],"position":{"start":{"line":34,"column":17,"offset":3343},"end":{"line":34,"column":103,"offset":3429},"indent":[]}},{"type":"text","value":" (something people will actually update)”","position":{"start":{"line":34,"column":103,"offset":3429},"end":{"line":34,"column":144,"offset":3470},"indent":[]}}],"position":{"start":{"line":34,"column":3,"offset":3329},"end":{"line":34,"column":144,"offset":3470},"indent":[]}}],"position":{"start":{"line":34,"column":1,"offset":3327},"end":{"line":34,"column":144,"offset":3470},"indent":[]}},{"type":"listItem","spread":false,"checked":null,"children":[{"type":"paragraph","children":[{"type":"text","value":"“I think removing CODEOWNERS makes it more difficult for new developers without historical context to determine who the right reviewers are.”","position":{"start":{"line":35,"column":3,"offset":3473},"end":{"line":35,"column":144,"offset":3614},"indent":[]}}],"position":{"start":{"line":35,"column":3,"offset":3473},"end":{"line":35,"column":144,"offset":3614},"indent":[]}}],"position":{"start":{"line":35,"column":1,"offset":3471},"end":{"line":35,"column":144,"offset":3614},"indent":[]}}],"position":{"start":{"line":31,"column":1,"offset":3048},"end":{"line":35,"column":144,"offset":3614},"indent":[1,1,1,1]}},{"type":"paragraph","children":[{"type":"text","value":"It was clear we needed ","position":{"start":{"line":37,"column":1,"offset":3616},"end":{"line":37,"column":24,"offset":3639},"indent":[]}},{"type":"emphasis","children":[{"type":"text","value":"something","position":{"start":{"line":37,"column":25,"offset":3640},"end":{"line":37,"column":34,"offset":3649},"indent":[]}}],"position":{"start":{"line":37,"column":24,"offset":3639},"end":{"line":37,"column":35,"offset":3650},"indent":[]}},{"type":"text","value":", but CODEOWNERS didn’t do exactly what we needed and we didn’t have the ability to change its behavior.","position":{"start":{"line":37,"column":35,"offset":3650},"end":{"line":37,"column":139,"offset":3754},"indent":[]}}],"position":{"start":{"line":37,"column":1,"offset":3616},"end":{"line":37,"column":139,"offset":3754},"indent":[]}},{"type":"heading","depth":2,"children":[{"type":"link","url":"#Exploring-alternatives","title":null,"children":[],"data":{"hProperties":{"aria-label":"Exploring alternatives permalink","class":"anchor before"},"hChildren":[{"type":"raw","value":"<svg aria-hidden=\"true\" xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 18 95 120\" height=\"18\" width=\"18\"><path d=\"M53.69,78.7H37.94l-5.85,25H21.74l5.85-25H15.89L18,69.1H29.84l4.65-19.65H23.39l2.1-9.6H36.74l5.7-23.7H52.79l-5.7,23.7H62.84l5.7-23.7H78.89l-5.7,23.7H84.74l-2.4,9.6H70.94L66.29,69.1H77.24l-2.4,9.6H64l-5.85,25H47.84Zm-13.5-9.6H55.94l4.65-19.65H44.84Z\"/></svg>"}]}},{"type":"text","value":"Exploring alternatives","position":{"start":{"line":39,"column":4,"offset":3759},"end":{"line":39,"column":26,"offset":3781},"indent":[]}}],"position":{"start":{"line":39,"column":1,"offset":3756},"end":{"line":39,"column":26,"offset":3781},"indent":[]},"data":{"id":"Exploring-alternatives","htmlAttributes":{"id":"Exploring-alternatives"},"hProperties":{"id":"Exploring-alternatives","style":"position:relative;"}}},{"type":"paragraph","children":[{"type":"text","value":"There was enough evidence that a code ownership problem existed to justify exploring alternatives.","position":{"start":{"line":41,"column":1,"offset":3783},"end":{"line":41,"column":99,"offset":3881},"indent":[]}}],"position":{"start":{"line":41,"column":1,"offset":3783},"end":{"line":41,"column":99,"offset":3881},"indent":[]}},{"type":"paragraph","children":[{"type":"text","value":"I found ","position":{"start":{"line":43,"column":1,"offset":3883},"end":{"line":43,"column":9,"offset":3891},"indent":[]}},{"type":"link","title":null,"url":"https://bionic.fullstory.com/taming-github-codeowners-with-bots/","children":[{"type":"text","value":"Fullstory’s blog post about how they ran into similar problems with CODEOWNERS and ended up creating a bot","position":{"start":{"line":43,"column":10,"offset":3892},"end":{"line":43,"column":116,"offset":3998},"indent":[]}}],"position":{"start":{"line":43,"column":9,"offset":3891},"end":{"line":43,"column":183,"offset":4065},"indent":[]}},{"type":"text","value":". I would have loved to experiment with using their bot, but unfortunately it was not open source.","position":{"start":{"line":43,"column":183,"offset":4065},"end":{"line":43,"column":281,"offset":4163},"indent":[]}}],"position":{"start":{"line":43,"column":1,"offset":3883},"end":{"line":43,"column":281,"offset":4163},"indent":[]}},{"type":"paragraph","children":[{"type":"text","value":"A few of our teammates, including myself, worked at Google so we were familiar with the ","position":{"start":{"line":45,"column":1,"offset":4165},"end":{"line":45,"column":89,"offset":4253},"indent":[]}},{"type":"link","title":null,"url":"https://chromium.googlesource.com/chromium/src/+/master/docs/code_reviews.md","children":[{"type":"text","value":"OWNERS","position":{"start":{"line":45,"column":90,"offset":4254},"end":{"line":45,"column":96,"offset":4260},"indent":[]}}],"position":{"start":{"line":45,"column":89,"offset":4253},"end":{"line":45,"column":175,"offset":4339},"indent":[]}},{"type":"text","value":" format used internally and in the Chromium project. This would have been an improvement over CODEOWNERS because multiple files are easier to maintain than a single large file and ","position":{"start":{"line":45,"column":175,"offset":4339},"end":{"line":45,"column":355,"offset":4519},"indent":[]}},{"type":"link","title":null,"url":"https://chromium.googlesource.com/chromium/tools/depot_tools/+/master/owners.py#607","children":[{"type":"text","value":"Chromium’s implementation explicitly attempts to minimize the number of reviewers","position":{"start":{"line":45,"column":356,"offset":4520},"end":{"line":45,"column":437,"offset":4601},"indent":[]}}],"position":{"start":{"line":45,"column":355,"offset":4519},"end":{"line":45,"column":523,"offset":4687},"indent":[]}},{"type":"text","value":", but I was worried this would continue to create a gatekeeper culture around modifying code.","position":{"start":{"line":45,"column":523,"offset":4687},"end":{"line":45,"column":616,"offset":4780},"indent":[]}}],"position":{"start":{"line":45,"column":1,"offset":4165},"end":{"line":45,"column":616,"offset":4780},"indent":[]}},{"type":"paragraph","children":[{"type":"text","value":"I wanted a solution that would:","position":{"start":{"line":47,"column":1,"offset":4782},"end":{"line":47,"column":32,"offset":4813},"indent":[]}}],"position":{"start":{"line":47,"column":1,"offset":4782},"end":{"line":47,"column":32,"offset":4813},"indent":[]}},{"type":"list","ordered":true,"start":1,"spread":false,"children":[{"type":"listItem","spread":false,"checked":null,"children":[{"type":"paragraph","children":[{"type":"text","value":"Allow developers to subscribe to the code changes that they cared about without creating an expectation that they would review all those changes.","position":{"start":{"line":49,"column":4,"offset":4818},"end":{"line":49,"column":149,"offset":4963},"indent":[]}}],"position":{"start":{"line":49,"column":4,"offset":4818},"end":{"line":49,"column":149,"offset":4963},"indent":[]}}],"position":{"start":{"line":49,"column":1,"offset":4815},"end":{"line":49,"column":149,"offset":4963},"indent":[]}},{"type":"listItem","spread":false,"checked":null,"children":[{"type":"paragraph","children":[{"type":"text","value":"Allow authors to use their judgement and agency to intentionally select reviewers whose feedback they think would be valuable (for example: Who wrote the code being edited? Who reviewed the code being edited? Who provides valuable feedback in a timely manner?).","position":{"start":{"line":50,"column":4,"offset":4967},"end":{"line":50,"column":265,"offset":5228},"indent":[]}}],"position":{"start":{"line":50,"column":4,"offset":4967},"end":{"line":50,"column":265,"offset":5228},"indent":[]}}],"position":{"start":{"line":50,"column":1,"offset":4964},"end":{"line":50,"column":265,"offset":5228},"indent":[]}},{"type":"listItem","spread":false,"checked":null,"children":[{"type":"paragraph","children":[{"type":"text","value":"Be easy to understand and maintain in a large and constantly evolving codebase.","position":{"start":{"line":51,"column":4,"offset":5232},"end":{"line":51,"column":83,"offset":5311},"indent":[]}}],"position":{"start":{"line":51,"column":4,"offset":5232},"end":{"line":51,"column":83,"offset":5311},"indent":[]}}],"position":{"start":{"line":51,"column":1,"offset":5229},"end":{"line":51,"column":83,"offset":5311},"indent":[]}}],"position":{"start":{"line":49,"column":1,"offset":4815},"end":{"line":51,"column":83,"offset":5311},"indent":[1,1]}},{"type":"paragraph","children":[{"type":"text","value":"Neither CODEOWNERS nor OWNERs were designed with all these requirements in mind, so I started to think about what a new tool might look like, and I ended up with ","position":{"start":{"line":53,"column":1,"offset":5313},"end":{"line":53,"column":163,"offset":5475},"indent":[]}},{"type":"link","title":null,"url":"https://github.com/sourcegraph/codenotify","children":[{"type":"text","value":"Codenotify","position":{"start":{"line":53,"column":164,"offset":5476},"end":{"line":53,"column":174,"offset":5486},"indent":[]}}],"position":{"start":{"line":53,"column":163,"offset":5475},"end":{"line":53,"column":218,"offset":5530},"indent":[]}},{"type":"text","value":".","position":{"start":{"line":53,"column":218,"offset":5530},"end":{"line":53,"column":219,"offset":5531},"indent":[]}}],"position":{"start":{"line":53,"column":1,"offset":5313},"end":{"line":53,"column":219,"offset":5531},"indent":[]}},{"type":"heading","depth":2,"children":[{"type":"link","url":"#Designing-Codenotify","title":null,"children":[],"data":{"hProperties":{"aria-label":"Designing Codenotify permalink","class":"anchor before"},"hChildren":[{"type":"raw","value":"<svg aria-hidden=\"true\" xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 18 95 120\" height=\"18\" width=\"18\"><path d=\"M53.69,78.7H37.94l-5.85,25H21.74l5.85-25H15.89L18,69.1H29.84l4.65-19.65H23.39l2.1-9.6H36.74l5.7-23.7H52.79l-5.7,23.7H62.84l5.7-23.7H78.89l-5.7,23.7H84.74l-2.4,9.6H70.94L66.29,69.1H77.24l-2.4,9.6H64l-5.85,25H47.84Zm-13.5-9.6H55.94l4.65-19.65H44.84Z\"/></svg>"}]}},{"type":"text","value":"Designing Codenotify","position":{"start":{"line":55,"column":4,"offset":5536},"end":{"line":55,"column":24,"offset":5556},"indent":[]}}],"position":{"start":{"line":55,"column":1,"offset":5533},"end":{"line":55,"column":24,"offset":5556},"indent":[]},"data":{"id":"Designing-Codenotify","htmlAttributes":{"id":"Designing-Codenotify"},"hProperties":{"id":"Designing-Codenotify","style":"position:relative;"}}},{"type":"paragraph","children":[{"type":"text","value":"As the name implies, Codenotify is designed around the concept of notifications, not about establishing “ownership” of code or mandating “reviewers”. Codenotify works on the command line and is codehost agnostic at its core, but it is also packaged as a GitHub Action so it is easy for repositories on GitHub, like ours, to adopt. The GitHub Action sends notifications to subscribers by mentioning them in a comment instead of adding them to the official “reviewers” or “assignees” lists on GitHub.","position":{"start":{"line":57,"column":1,"offset":5558},"end":{"line":57,"column":499,"offset":6056},"indent":[]}}],"position":{"start":{"line":57,"column":1,"offset":5558},"end":{"line":57,"column":499,"offset":6056},"indent":[]}},{"type":"paragraph","children":[{"type":"text","value":"Notification rules are stored in ","position":{"start":{"line":59,"column":1,"offset":6058},"end":{"line":59,"column":34,"offset":6091},"indent":[]}},{"type":"link","title":null,"url":"https://sourcegraph.com/github.com/sourcegraph/codenotify/-/blob/README.md#codenotify-files","children":[{"type":"text","value":"CODENOTIFY files","position":{"start":{"line":59,"column":35,"offset":6092},"end":{"line":59,"column":51,"offset":6108},"indent":[]}}],"position":{"start":{"line":59,"column":34,"offset":6091},"end":{"line":59,"column":145,"offset":6202},"indent":[]}},{"type":"text","value":" in any directory. This makes rules more maintainable and less brittle to moving code because the CODENOTIFY files are adjacent to the files they have rules for.","position":{"start":{"line":59,"column":145,"offset":6202},"end":{"line":59,"column":306,"offset":6363},"indent":[]}}],"position":{"start":{"line":59,"column":1,"offset":6058},"end":{"line":59,"column":306,"offset":6363},"indent":[]}},{"type":"paragraph","children":[{"type":"text","value":"Codenotify rules and files are familiar in syntax to CODEOWNERS, but simpler to understand because each rule is additive, not hierarchical. This means that you can understand how a single rule behaves without needing to consider any other rules (unlike OWNERS or CODEOWNERS).","position":{"start":{"line":61,"column":1,"offset":6365},"end":{"line":61,"column":276,"offset":6640},"indent":[]}}],"position":{"start":{"line":61,"column":1,"offset":6365},"end":{"line":61,"column":276,"offset":6640},"indent":[]}},{"type":"html","value":"<p style=\"padding: 1em 2em; background-color: lightblue;\">\nIf you want to learn more about Codenotify or try it out for yourself, then the project's <a href=\"https://sourcegraph.com/github.com/sourcegraph/codenotify/-/blob/README.md\">README</a> has everything you need to know!\n</p>","position":{"start":{"line":63,"column":1,"offset":6642},"end":{"line":65,"column":5,"offset":6924},"indent":[1,1]}},{"type":"heading","depth":2,"children":[{"type":"link","url":"#Starting-our-code-ownership-experiment","title":null,"children":[],"data":{"hProperties":{"aria-label":"Starting our code ownership experiment permalink","class":"anchor before"},"hChildren":[{"type":"raw","value":"<svg aria-hidden=\"true\" xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 18 95 120\" height=\"18\" width=\"18\"><path d=\"M53.69,78.7H37.94l-5.85,25H21.74l5.85-25H15.89L18,69.1H29.84l4.65-19.65H23.39l2.1-9.6H36.74l5.7-23.7H52.79l-5.7,23.7H62.84l5.7-23.7H78.89l-5.7,23.7H84.74l-2.4,9.6H70.94L66.29,69.1H77.24l-2.4,9.6H64l-5.85,25H47.84Zm-13.5-9.6H55.94l4.65-19.65H44.84Z\"/></svg>"}]}},{"type":"text","value":"Starting our code ownership experiment","position":{"start":{"line":67,"column":4,"offset":6929},"end":{"line":67,"column":42,"offset":6967},"indent":[]}}],"position":{"start":{"line":67,"column":1,"offset":6926},"end":{"line":67,"column":42,"offset":6967},"indent":[]},"data":{"id":"Starting-our-code-ownership-experiment","htmlAttributes":{"id":"Starting-our-code-ownership-experiment"},"hProperties":{"id":"Starting-our-code-ownership-experiment","style":"position:relative;"}}},{"type":"paragraph","children":[{"type":"text","value":"After I had a working prototype of Codenotify, it was time to actually experiment. Experimentation is a great way to discover unforeseen costs and benefits, and learn whether hypothetical problems are problems in practice.","position":{"start":{"line":69,"column":1,"offset":6969},"end":{"line":69,"column":223,"offset":7191},"indent":[]}}],"position":{"start":{"line":69,"column":1,"offset":6969},"end":{"line":69,"column":223,"offset":7191},"indent":[]}},{"type":"paragraph","children":[{"type":"link","title":null,"url":"https://github.com/sourcegraph/sourcegraph/pull/13838","children":[{"type":"text","value":"We deleted our CODEOWNERS file on September 16, 2020","position":{"start":{"line":71,"column":2,"offset":7194},"end":{"line":71,"column":54,"offset":7246},"indent":[]}}],"position":{"start":{"line":71,"column":1,"offset":7193},"end":{"line":71,"column":110,"offset":7302},"indent":[]}},{"type":"text","value":", and teammates have been ","position":{"start":{"line":71,"column":110,"offset":7302},"end":{"line":71,"column":136,"offset":7328},"indent":[]}},{"type":"link","title":null,"url":"https://sourcegraph.com/search?q=r%3A%5Egithub.com%2Fsourcegraph%2F%28sourcegraph%7Cabout%29%24+f%3ACODENOTIFY+count%3A1000&patternType=literal","children":[{"type":"text","value":"adding CODENOTIFY files","position":{"start":{"line":71,"column":137,"offset":7329},"end":{"line":71,"column":160,"offset":7352},"indent":[]}}],"position":{"start":{"line":71,"column":136,"offset":7328},"end":{"line":71,"column":306,"offset":7498},"indent":[]}},{"type":"text","value":" ever since.","position":{"start":{"line":71,"column":306,"offset":7498},"end":{"line":71,"column":318,"offset":7510},"indent":[]}}],"position":{"start":{"line":71,"column":1,"offset":7193},"end":{"line":71,"column":318,"offset":7510},"indent":[]}},{"type":"paragraph","children":[{"type":"text","value":"At the end of October I will check in with the team to see how they are feeling about this code ownership experiment after having lived with the change for over a month. The exciting thing is that no matter what the outcome is, we will have learned something new.","position":{"start":{"line":73,"column":1,"offset":7512},"end":{"line":73,"column":264,"offset":7775},"indent":[]}}],"position":{"start":{"line":73,"column":1,"offset":7512},"end":{"line":73,"column":264,"offset":7775},"indent":[]}},{"type":"heading","depth":2,"children":[{"type":"link","url":"#More-posts-like-this","title":null,"children":[],"data":{"hProperties":{"aria-label":"More posts like this permalink","class":"anchor before"},"hChildren":[{"type":"raw","value":"<svg aria-hidden=\"true\" xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 18 95 120\" height=\"18\" width=\"18\"><path d=\"M53.69,78.7H37.94l-5.85,25H21.74l5.85-25H15.89L18,69.1H29.84l4.65-19.65H23.39l2.1-9.6H36.74l5.7-23.7H52.79l-5.7,23.7H62.84l5.7-23.7H78.89l-5.7,23.7H84.74l-2.4,9.6H70.94L66.29,69.1H77.24l-2.4,9.6H64l-5.85,25H47.84Zm-13.5-9.6H55.94l4.65-19.65H44.84Z\"/></svg>"}]}},{"type":"text","value":"More posts like this","position":{"start":{"line":75,"column":4,"offset":7780},"end":{"line":75,"column":24,"offset":7800},"indent":[]}}],"position":{"start":{"line":75,"column":1,"offset":7777},"end":{"line":75,"column":24,"offset":7800},"indent":[]},"data":{"id":"More-posts-like-this","htmlAttributes":{"id":"More-posts-like-this"},"hProperties":{"id":"More-posts-like-this","style":"position:relative;"}}},{"type":"list","ordered":false,"start":null,"spread":false,"children":[{"type":"listItem","spread":false,"checked":null,"children":[{"type":"paragraph","children":[{"type":"link","title":null,"url":"https://about.sourcegraph.com/blog/nine-circles-of-dependency-hell/","children":[{"type":"text","value":"The Nine Circles of Dependency Hell (and a roadmap out)","position":{"start":{"line":77,"column":4,"offset":7805},"end":{"line":77,"column":59,"offset":7860},"indent":[]}}],"position":{"