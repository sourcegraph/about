{
  "name": "about-replatform",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build && next export",
    "start": "next start",
    "lint": "yarn run eslint && yarn run typecheck",
    "typecheck": "tsc -p .",
    "eslint": "eslint '**/*.{ts,tsx}'",
    "ci": "yarn install --immutable --immutable-cache --check-cache",
    "prettier": "prettier '**/{*.{js?(on),ts?(x),md,scss},.*.js?(on)}' --write --list-different",
    "prettier:check": "yarn -s run prettier --write=false"
  },
  "eslintConfig": {
    "extends": ["@sourcegraph/eslint-config", "next/core-web-vitals"],
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "rules": {
      "import/no-default-export": "off",
      "@next/next/no-img-element": "off"
    }
  },
  "dependencies": {
    "next": "12.0.10",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@sourcegraph/eslint-config": "^0.25.1",
    "@sourcegraph/prettierrc": "^3.0.3",
    "@types/node": "17.0.14",
    "@types/react": "17.0.39",
    "eslint": "^7.32.0",
    "eslint-config-next": "12.0.10",
    "prettier": "^2.5.1",
    "typescript": "4.5.5"
  }
}
