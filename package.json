{
  "name": "about-replatform",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build && next export",
    "start": "next start",
    "lint": "yarn eslint && yarn typecheck",
    "typecheck": "tsc -p .",
    "eslint": "eslint '**/*.{ts,tsx}'",
    "ci": "yarn install --immutable --immutable-cache --check-cache",
    "prettier": "prettier '**/{*.{js?(on),ts?(x),md,scss},.*.js?(on)}' --write --list-different",
    "prettier:check": "yarn -s prettier --write=false"
  },
  "eslintConfig": {
    "extends": [
      "@sourcegraph/eslint-config",
      "next/core-web-vitals"
    ],
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "rules": {
      "import/no-default-export": "off",
      "@next/next/no-img-element": "off",
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "next": "^12.1.0",
    "next-mdx-remote": "^4.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-slug": "^5.0.1",
    "remark-gfm": "^3.0.1"
  },
  "devDependencies": {
    "@sourcegraph/eslint-config": "^0.27.0",
    "@sourcegraph/prettierrc": "^3.0.3",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "bootstrap": "4.6.0",
    "eslint": "^7.32.0",
    "eslint-config-next": "^12.1.0",
    "mdi-react": "^8.2.0",
    "prettier": "^2.5.1",
    "react-bootstrap": "2.0.0",
    "react-spring": "^9.4.4",
    "sass": "^1.49.7",
    "typescript": "4.5.5"
  }
}
